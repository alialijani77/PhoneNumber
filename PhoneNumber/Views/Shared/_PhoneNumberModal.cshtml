@using PhoneNumber.Domain.ViewModels
@model CreateOrEditPhoneNumberViewModel

<form method="post" id="PhoneNumberForm" asp-action="CreateOrEditPhoneNumber" asp-controller="Home" data-ajax="true" data-ajax-method="post" data-ajax-begin="StartLoading()" data-ajax-success="PhoneNumberFormSubmited">
	<div class="modal-header">
		<h5 class="modal-title">@((Model.Id == 0) ? "Add Phone" : $"Edit {Model.Name}")</h5>
		<button onclick="hiddenPhoneNumberModalBody()" type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<div class="modal-body">
		<div class="row">

			<input type="hidden" asp-for="Id" />

			<div class="col-md-6 mb-3">
				<label>Name</label>
				<input type="text" class="form-control" asp-for="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="col-md-6 mb-3">
				<label>Family</label>
				<input type="text" class="form-control" asp-for="Family">
				<span class="text-danger" asp-validation-for="Family"></span>
			</div>

			<div class="col-md-6 mb-3">
				<label>Phone</label>
				<input type="text" class="form-control" asp-for="Phone">
				<span class="text-danger" asp-validation-for="Phone"></span>

			</div>

			<div class="col-md-6 mb-3">
				<label>Email</label>
				<input type="text" class="form-control" asp-for="Email">
			</div>

			<div class="col-md-12">
				<label>Address</label>
				<textarea class="form-control" rows="5" asp-for="Address"></textarea>
			</div>

		</div>
	</div>
	<div class="modal-footer">
		<button onclick="hiddenPhoneNumberModalBody()" type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
		<button onclick="e.preventDefault" type="submit" class="btn btn-success">@((Model.Id == 0) ? "Create" : "Edit")</button>
	</div>
</form>